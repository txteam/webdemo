<?xml version="1.0" encoding="utf-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
	<comment>datasource_config</comment>	
	<!-- 数据库类型 --> 
	<entry key="dataSource.dataSourceType">MYSQL</entry>
	<!-- 数据库地址 -->
	<entry key="dataSource.url"><![CDATA[jdbc:mysql://localhost:3306/lms?characterEncoding=UTF-8&zeroDateTimeBehavior=convertToNull]]></entry>
	<!-- 账号 -->
	<entry key="dataSource.username">root</entry>
	<!-- 密码 -->
	<entry key="dataSource.password">root</entry>
	<!-- 驱动 -->
	<entry key="dataSource.driverClassName">com.mysql.jdbc.Driver</entry>
	<!-- 连接测试语句 -->
	<entry key="dataSource.validationQuery">SELECT 1 </entry>
	<!-- 最大连接数据库连接数,设 0 为没有限制  -->
	<entry key="dataSource.maxActive">30</entry>
	<!-- 最大等待连接中的数量,设 0 为没有限制  -->
	<entry key="dataSource.maxIdle">5</entry>
	<!-- 最大等待毫秒数, 单位为 ms,设为-1位无限等待,超过时间会出错误信息 -->
	<entry key="dataSource.maxWait">5000</entry>
	
</properties>